<% layout('layouts/boilerplate')%>
<div class="container">
    <div class="row">
        <% for (let campground of campgrounds){%>
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="card indexCards shadow border-0 mt-4">
                    <a href="/campgrounds/<%= campground._id %>"><img id="campgroundCard" class="card-img-top" src="<%= campground.image %>"></a>
                    <div class="card-body">
                        <h5 class="card-title text-capitalize">
                            <a href="/campgrounds/<%= campground._id %>" style="text-decoration: none;"><%= campground.title %></a>
                            <small class="float-right text-muted">$<%= campground.price %></small>
                        </h5>
                        <p class="card-text">
                            <small class="text-muted"><%= campground.location%></small>
                        </p>
                    </div>
                </div>
            </div>
        <% }%>
    </div>
</div>